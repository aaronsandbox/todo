<%= form_with(model: list, html: { class: 'container mt-5' }) do |form| %> 
    <% if list.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h4>
        <ul>
          <% list.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :completed, class: "form-label" %>
      <div class="form-check">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, "Completed", class: "form-check-label" %>
      </div>
    </div>
  
    <div class="mb-3">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
  