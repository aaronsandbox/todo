<% content_for :title, "Deleting List" %>

<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Deleting List</h2>
    </div>
    <div class="card-body">
      <%= render @list %>
    </div>
  </div>

  <div class="mt-4 d-flex justify-content-between align-items-center">
    <div>
      <%= link_to "Edit this list", edit_list_path(@list), class: "btn btn-warning me-2" %>
      <%= link_to "Back to lists", lists_path, class: "btn btn-secondary" %>
    </div>
    <div>
      <%= button_to "Destroy this list", @list, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
